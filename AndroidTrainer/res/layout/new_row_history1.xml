<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 	
	android:layout_height="wrap_content" 
	android:layout_width="match_parent" 
	android:orientation="vertical"
	android:layout_margin="0dip"	
	android:id="@+id/objMainLayout" 	
	android:gravity="right">

    <LinearLayout
        android:id="@+id/internal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_gradient_no_corners"
        android:orientation="vertical"
        android:padding="10dip" >

        <RelativeLayout
            android:id="@+id/InternalRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lista_gradient"
            android:padding="6dip" >

            <LinearLayout
					    android:id="@+id/TopBar"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content" 
					    android:background="@drawable/lista_gradient"
					    android:visibility="gone">

					    <Button
					        android:id="@+id/btnExportKML"
					        android:layout_width="wrap_content"
					        android:layout_height="40dp"
					        android:background="@drawable/lista_gradient"
					        android:clickable="true"
					        android:text="kml"
					        android:textColor="#FFFFFF"
					        android:textSize="16sp" />

					    <Button
					        android:id="@+id/btnExportGPX"
					        android:layout_width="wrap_content"
					        android:layout_height="40dp"
					        android:layout_marginLeft="5dip"
					        android:background="@drawable/lista_gradient"
					        android:clickable="true"
					        android:text="gpx"
					        android:textColor="#FFFFFF"
					        android:textSize="16sp" />
						<Button
					        android:id="@+id/btnExportTCX"
					        android:layout_width="wrap_content"
					        android:layout_height="40dp"
					        android:layout_marginLeft="5dip"
					        android:background="@drawable/lista_gradient"
					        android:clickable="true"
					        android:text="tcx"
					        android:textColor="#FFFFFF"
					        android:textSize="16sp" />
						
					    <ImageButton 
				                    android:src="@drawable/share"
				                	android:clickable="true" 
				                	android:layout_width="wrap_content" 
				                	android:textSize="16sp" 
				                	android:layout_marginLeft="5dip"
				                	android:layout_height="wrap_content" 
				                	android:background="@drawable/lista_gradient" 
				                	android:id="@+id/btnShareFB"                	
				                	android:text="@string/share"
				                	android:textColor="#FFFFFF" />
					</LinearLayout>
            
            <LinearLayout
                android:id="@+id/TopLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="0dip"
                    android:layout_marginTop="0dip"
                    android:background="@drawable/gradient_history_dett"
                    android:editable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="4dip"
                    android:text="10,5 Km/h"
                    android:textColor="#FFFFFF"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="0dip"
                    android:layout_marginTop="0dip"
                    android:background="@drawable/gradient_history_dett"
                    android:editable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="4dip"
                    android:text="75 Min"
                    android:textColor="#FFFFFF"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="0dip"
                    android:layout_marginTop="0dip"
                    android:background="@drawable/gradient_history_dett"
                    android:editable="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="4dip"
                    android:text="368 Kal"
                    android:textColor="#FFFFFF"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/MiddleLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dip"
                android:orientation="vertical"
                android:padding="10dip" >

                <LinearLayout
                    android:id="@+id/MiddleTopLinear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dip"
                    android:orientation="horizontal"
                    android:padding="0dip" >

                    <LinearLayout
                        android:id="@+id/BarFrameBG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:background="@drawable/gradient_history_pbar"
                        android:orientation="vertical"
                        android:padding="0dip" >

                        <TextView
                            android:id="@+id/textDistance"
                            android:layout_width="200dip"
                            android:layout_height="40dip"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="0dip"
                            android:layout_marginTop="0dip"
                            android:background="@drawable/gradient_history_pbar_bg"
                            android:editable="false"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="30Km"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/BottomLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dip"
                android:clickable="true"
                
                android:orientation="vertical"
                android:padding="10dip" >

                <ImageView
                    android:id="@+id/imgTypeExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="0dip" />

                <TextView
                    android:id="@+id/textNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="Running and good job"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/TopLinear"
                android:background="@drawable/circle_gradient"
                android:clickable="true"
                android:padding="6dip" >

                <ImageView
                    android:id="@+id/imgInfo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/info" 
                    android:clickable="true"/>
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:layout_marginTop="220dip"
                android:layout_weight="1" />

        </RelativeLayout>
    </LinearLayout>
		
</LinearLayout>