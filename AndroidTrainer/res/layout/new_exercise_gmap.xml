<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 	
	android:layout_height="match_parent" 
	android:layout_width="match_parent" 
	android:orientation="vertical"
	android:padding="1dip" 
	android:id="@+id/objMainLayout" 	
	android:background="@drawable/main_gradient" 
	android:gravity="right">	
	<RelativeLayout android:padding="0dip" 	    
	    android:layout_width="fill_parent" 
	    android:id="@+id/relativeLayout1" 
	    android:layout_height="wrap_content"
	    android:background="@drawable/glm_main_popup">

		<RelativeLayout
		    android:id="@+id/TopLinear"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:background="@drawable/glm_popup">
		    <RelativeLayout
                    android:id="@+id/btnInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_gradient"
                    android:clickable="true"
                    android:padding="2dip" android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/left"/>

                </RelativeLayout>
		</RelativeLayout>

		<LinearLayout
		    android:id="@+id/internal"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginTop="50dp"
		    android:layout_weight="1"
		   
		    android:orientation="vertical"
		    android:padding="4dp" >

		    <LinearLayout
		        android:id="@+id/linearLayout2"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_marginTop="10dip"
		        android:orientation="vertical" >

		        <com.google.android.maps.MapView
		            android:layout_marginTop="5dp"
		            android:id="@+id/gmap"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:apiKey="0UBi7KMm1jzJnpyMmIW79S1sUtmH3W-3DYzhxYg"
		            android:clickable="true"
		            android:enabled="true" >
		        </com.google.android.maps.MapView>
		    </LinearLayout>
		</LinearLayout>

		<ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/TopLinear"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="-4dp"
                android:src="@drawable/glm_arrow_down" />

   </RelativeLayout>
</LinearLayout> 