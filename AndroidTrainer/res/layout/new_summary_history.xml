<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 	
	android:layout_height="match_parent" 
	android:layout_width="match_parent" 
	android:orientation="vertical"
	android:padding="1dip" 
	android:id="@+id/objMainLayout" 	
	android:background="@drawable/main_gradient" 
	android:gravity="right">	

	<RelativeLayout 
		android:layout_height="match_parent" 
		android:layout_width="match_parent" 
		android:padding="0dip"
		android:id="@+id/objMainLayout" 	
		android:background="@drawable/glm_main_popup">
	
	    <RelativeLayout
	        android:id="@+id/TopLinear"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/glm_popup" >
	
	        <RelativeLayout
	            android:id="@+id/btnInfo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/circle_gradient"
	            android:clickable="true"
	            android:padding="2dip" >
	
	            <ImageView
	                android:id="@+id/imgBack"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerHorizontal="true"
	                android:layout_centerVertical="true"
	                android:src="@drawable/left" />
	        </RelativeLayout>
	
	        <TextView
	            android:id="@+id/textHistory"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:text="@string/exercise_dett"
	            android:textColor="#FFFFFFFF"
	            android:textSize="14sp"
	            android:textStyle="bold" />
	
	        <TextView
	            android:id="@+id/textDistance_tot"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_alignParentRight="true"
	            android:gravity="right"
	            android:text="30,9Km"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textSize="18dip"
	            android:textStyle="bold" 
	            android:layout_marginRight="5dp"
	            android:layout_marginBottom="2dp"/>
	
	    </RelativeLayout>
	
		<ScrollView android:layout_marginTop="70dip"
	        	android:id="@+id/scrollView1" 
	        	android:layout_width="match_parent" 
	        	android:layout_height="match_parent">
				<LinearLayout 
					android:id="@+id/internal" 
					android:orientation="vertical" 
					android:layout_height="wrap_content" 
					android:layout_width="match_parent" 
					android:layout_weight="1">
					
					
					<!-- Dettaglio Graph Inizio -->
					<LinearLayout android:id="@+id/linearLayout2" 
								android:orientation="vertical" 
								android:layout_height="wrap_content" 
								android:padding="1dp"
								android:layout_width="match_parent">					
								<!-- 1 Row -->
								<!-- 1 Row -->
								
								<!-- 2 Row -->
								<!-- 2 Row -->
	
								<LinearLayout
								    android:id="@+id/llGraph"
								    android:layout_width="match_parent"
								    android:layout_height="140dip"
								    android:background="@drawable/web_container"
								    android:orientation="vertical" >
	
								    <ProgressBar
								        android:id="@+id/pBarWaiting"
								        style="?android:attr/progressBarStyleLarge"
								        android:layout_width="match_parent"
								        android:indeterminate="true"
								        android:layout_height="140dip"
								        android:layout_weight="0.83" />
								</LinearLayout>
	
					</LinearLayout>	
					<!-- Dettaglio Graph Inizio -->	    
					
					<!-- Separator -->		
					<!-- Separator -->
					
					<!-- RUN -->			
					<LinearLayout android:id="@+id/linearLayout2" 
						android:orientation="vertical" 
						android:layout_height="wrap_content" 
						android:layout_marginTop="10dp"
						android:layout_width="match_parent" >
							<RelativeLayout
						        android:orientation="horizontal"
						        android:layout_width="fill_parent"
						        android:layout_height="wrap_content"
						        
						        android:padding="10dip"
						        android:clickable="true"
						        android:id="@+id/btn_expand">					        					        				        
								<!-- 1 Row -->
								<LinearLayout 
									android:layout_marginTop="30dip" 
									android:id="@+id/internal" 
									android:orientation="vertical" 
									android:layout_height="match_parent" 
									android:layout_width="match_parent" 
									android:layout_weight="1">
								    
												
									<LinearLayout 
										android:gravity="right" 
										android:layout_marginTop="10dip" 
										android:layout_width="match_parent" 
										android:id="@+id/linearLayout1" 
										android:orientation="horizontal" 
										android:layout_height="wrap_content">									
										<TextView android:text="0" 
												android:layout_width="match_parent" 
												android:textAppearance="?android:attr/textAppearanceSmall"
												android:textStyle="bold"
												android:textSize="12dip"
												android:layout_height="wrap_content" 
												android:gravity="right"
												android:layout_marginLeft="200dip" android:id="@+id/textDistance_run"></TextView>										
									</LinearLayout>
									<RelativeLayout 
										android:layout_height="wrap_content" 
										android:layout_width="wrap_content" 
										android:id="@+id/relativeLayout2">
									</RelativeLayout>
									<View 
										android:layout_weight="1" 
										android:layout_marginRight="20dip" 
										android:layout_width="fill_parent" 
										android:background="#ADAC99" 
										android:id="@+id/view3" 
										android:layout_marginBottom="0dip" 
										android:layout_height="0.5dp" 
										android:layout_marginTop="2dip" 
										android:layout_marginLeft="20dip">
									</View>				
								</LinearLayout>
								<!-- 1 Row -->       					            					            					            					
	           							<Button 
						                	android:clickable="true" 
						                	android:layout_width="match_parent" 
						                	android:textSize="16sp" 
						                	android:textColor="#FFFFFF"
						                	android:layout_height="wrap_content" 
						                	android:background="@drawable/lista_gradient" 
						                	android:id="@+id/btn_history_run"                	
						                	android:text="@string/history_run"></Button>								
										 	 
							</RelativeLayout>		            					
					</LinearLayout>		
		            <!-- RUN -->	            
		            
		            <!-- Separator -->		
					<!-- Separator -->
					
					<!-- WALK -->			
					<LinearLayout android:id="@+id/linearLayout2" 
						android:orientation="vertical" 
						android:layout_height="wrap_content" 
						
						android:layout_width="match_parent" >
							<RelativeLayout
						        android:orientation="horizontal"
						        android:layout_width="fill_parent"
						        android:layout_height="wrap_content"
						        
						        android:padding="10dip"
						        android:clickable="true"
						        android:id="@+id/btn_expand">
								<!-- 1 Row -->
								<LinearLayout 
									android:layout_marginTop="30dip" 
									android:id="@+id/internal" 
									android:orientation="vertical" 
									android:layout_height="match_parent" 
									android:layout_width="match_parent" 
									android:layout_weight="1">
								    
											
									<LinearLayout 
										android:gravity="right" 
										android:layout_marginTop="10dip" 
										android:layout_width="match_parent" 
										android:id="@+id/linearLayout1" 
										android:orientation="horizontal" 
										android:layout_height="wrap_content">									
										<TextView android:text="0" 
												android:layout_width="match_parent" 
												android:textAppearance="?android:attr/textAppearanceSmall"
												android:textStyle="bold"
												android:textSize="12dip"
												android:layout_height="wrap_content" 
												android:gravity="right"
												android:layout_marginLeft="200dip" android:id="@+id/textDistance_walk"></TextView>										
									</LinearLayout>
									<RelativeLayout 
										android:layout_height="wrap_content" 
										android:layout_width="wrap_content" 
										android:id="@+id/relativeLayout2">
									</RelativeLayout>
									<View 
										android:layout_weight="1" 
										android:layout_marginRight="20dip" 
										android:layout_width="fill_parent" 
										android:background="#ADAC99" 
										android:id="@+id/view3" 
										android:layout_marginBottom="0dip" 
										android:layout_height="0.5dp" 
										android:layout_marginTop="2dip" 
										android:layout_marginLeft="20dip">
									</View>				
								</LinearLayout>
								<!-- 1 Row -->  
	           							<Button 
						                	android:clickable="true" 
						                	android:layout_width="match_parent" 
						                	android:textSize="16sp" 
						                	android:textColor="#FFFFFF" 
						                	android:layout_height="wrap_content" 
						                	android:background="@drawable/lista_gradient" 
						                	android:id="@+id/btn_history_walk"                	
						                	android:text="@string/history_walk"></Button>								
										 	 
							</RelativeLayout>		            					
					</LinearLayout>		
		            <!-- WALK -->
		            
		            <!-- Separator -->		
					<!-- Separator -->
					
					<!-- BIKE -->			
					<LinearLayout android:id="@+id/linearLayout2" 
						android:orientation="vertical" 
						android:layout_height="wrap_content" 
						
						android:layout_width="match_parent" >
							<RelativeLayout
						        android:orientation="horizontal"
						        android:layout_width="fill_parent"
						        android:layout_height="wrap_content"
						        
						        android:padding="10dip"
						        android:clickable="true"
						        android:id="@+id/btn_expand">
								<!-- 1 Row -->
								<LinearLayout 
									android:layout_marginTop="30dip" 
									android:id="@+id/internal" 
									android:orientation="vertical" 
									android:layout_height="match_parent" 
									android:layout_width="match_parent" 
									android:layout_weight="1">
								    									
									<LinearLayout 
										android:gravity="right" 
										android:layout_marginTop="10dip" 
										android:layout_width="match_parent" 
										android:id="@+id/linearLayout1" 
										android:orientation="horizontal" 
										android:layout_height="wrap_content">									
										<TextView android:text="0" 
												android:layout_width="match_parent" 
												android:textAppearance="?android:attr/textAppearanceSmall"
												android:textStyle="bold"
												android:textSize="12dip"
												android:layout_height="wrap_content" 
												android:gravity="right"
												android:layout_marginLeft="200dip" android:id="@+id/textDistance_bike"></TextView>										
									</LinearLayout>									
									<RelativeLayout 
										android:layout_height="wrap_content" 
										android:layout_width="wrap_content" 
										android:id="@+id/relativeLayout2">
									</RelativeLayout>
									<View 
										android:layout_weight="1" 
										android:layout_marginRight="20dip" 
										android:layout_width="fill_parent" 
										android:background="#ADAC99" 
										android:id="@+id/view3" 
										android:layout_marginBottom="0dip" 
										android:layout_height="0.5dp" 
										android:layout_marginTop="2dip" 
										android:layout_marginLeft="20dip">
									</View>				
								</LinearLayout>
								<!-- 1 Row -->  
	           							<Button 
						                	android:clickable="true" 
						                	android:layout_width="match_parent" 
						                	android:textSize="16sp" 
						                	android:textColor="#FFFFFF"
						                	android:layout_height="wrap_content" 
						                	android:background="@drawable/lista_gradient" 
						                	android:id="@+id/btn_history_bike"                	
						                	android:text="@string/history_bike"></Button>																 	 
							</RelativeLayout>		            					
					</LinearLayout>		
		            <!-- BIKE -->
		            			  	
		        </LinearLayout>
		  </ScrollView>
	
		<ImageView
		    android:id="@+id/imageView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/scrollView1"
		    android:layout_below="@+id/TopLinear"
		    android:layout_marginLeft="24dp"
            android:layout_marginTop="-4dp"
		    android:src="@drawable/glm_arrow_down" />
	
	</RelativeLayout> 
</LinearLayout>	