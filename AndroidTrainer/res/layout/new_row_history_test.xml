<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 	
	android:layout_height="wrap_content" 
	android:layout_width="match_parent" 
	android:orientation="vertical"
	android:layout_margin="0dip"	
	android:id="@+id/objMainLayout" 	
	android:gravity="right">

    <LinearLayout
        android:id="@+id/internal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_gradient_no_corners"
        android:orientation="vertical"
        android:padding="10dip" >

        <RelativeLayout
            android:id="@+id/InternalRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/glm_main_popup"
            android:padding="0dip" >
            
            <LinearLayout
                android:id="@+id/TopLinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" 
                android:background="@drawable/glm_popup">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/MiddleLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dip"
                android:orientation="vertical"
                android:padding="10dip">

                <LinearLayout
                    android:id="@+id/MiddleTopLinear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dip"
                    android:orientation="horizontal"
                    android:padding="0dip" >

                    <LinearLayout
                        android:id="@+id/BarFrameBG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:background="@drawable/gradient_history_pbar"
                        android:orientation="vertical"
                        android:padding="0dip" >

                        <TextView
                            android:id="@+id/textDistance"
                            android:layout_width="200dip"
                            android:layout_height="40dip"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="0dip"
                            android:layout_marginTop="0dip"
                            android:background="@drawable/gradient_history_pbar_bg"
                            android:editable="false"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="30Km"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/BottomLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dip"
                android:clickable="true"
                
                android:orientation="vertical"
                android:padding="10dip" >

                <ImageView
                    android:id="@+id/imgTypeExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dip"
                    android:layout_marginTop="0dip" />

                <TextView
                    android:id="@+id/textNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="Running and good job"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:layout_marginTop="220dip"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/TopLinear"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="-4dp"
                android:src="@drawable/glm_arrow_down" />

        </RelativeLayout>
    </LinearLayout>
		
</LinearLayout>