<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/main_gradient"
	android:id="@+id/bg_about"
	android:gravity="top">	
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="top">
	<RelativeLayout
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:background="@drawable/lista_title"
	        android:padding="6dip"
	        android:layout_height="match_parent">
				
			<TextView android:id="@+id/text_title" android:textSize="14sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold" 
				android:textColor="#FFFFFFFF"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
			 android:text="@string/app_name_buy"/>
		</RelativeLayout>			 
					 
	<TextView android:id="@+id/text_about2" android:textSize="15dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF"
			android:textStyle="normal"
			android:text="@string/version"
			android:paddingTop="5dip"
			android:layout_gravity="center_horizontal"
			 />		 
	<TextView android:id="@+id/txtVersion" android:textSize="15dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF"
			android:textStyle="normal"
			android:text="@string/version_n"
			
			android:layout_gravity="center_horizontal"
			 />
			 
	<TextView android:id="@+id/text_about3" android:textSize="15dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			android:text="@string/author"
			android:layout_marginTop="4dip"
			android:layout_gravity="center_horizontal"
			 />

	<TextView android:id="@+id/text_about4" android:textSize="14dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF"
			android:textStyle="normal"
			android:text="@string/about_1"
			android:layout_marginTop="6dip"
			android:layout_gravity="center_horizontal"
			 />
	<TextView android:id="@+id/text_about6" android:textSize="14dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF"
			android:textStyle="normal"
			android:text="@string/about_3"
			
			android:layout_gravity="center_horizontal"
			 />
			 
	<TextView android:id="@+id/text_about7" android:textSize="14dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF"
			android:textStyle="normal"
			android:text="@string/about_4"
			android:layout_marginTop="12dip"
			android:layout_gravity="center_horizontal"
			 />
	<TextView android:id="@+id/text_about8" android:textSize="14dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF"
			android:textStyle="normal"
			android:text="@string/about_5"
			android:paddingBottom="9dip"
			android:layout_gravity="center_horizontal"
			 />
	<TextView android:id="@+id/text_about10" android:textSize="14dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF"
			android:textStyle="normal"
			android:text="@string/about_7"
			
			android:layout_gravity="center_horizontal"
			 />

	<TextView android:id="@+id/text_about11" android:textSize="14dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFFFFF"
			android:textStyle="normal"
			android:text="@string/send"
			android:layout_marginTop="12dip"
			android:layout_gravity="center_horizontal"
			android:paddingBottom="5dip" />
			 
	<Button android:id="@+id/btn_mail_segnalazione" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/email"
			android:textStyle="bold"
			android:textSize="12dip"
			android:tint="#EE333333"
			android:textColor="#FFFFFF"
			android:singleLine="true"
			
			android:layout_marginTop="2dip"
			android:layout_gravity="center_horizontal"
			
			android:background="@drawable/lista_gradient"
		/>
		
	</LinearLayout>
</RelativeLayout>