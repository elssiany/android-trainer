<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 	
	android:layout_height="match_parent" 
	android:layout_width="match_parent" 
	android:orientation="vertical"
	android:padding="1dip" 
	android:id="@+id/objMainLayout" 	
	android:background="@drawable/main_gradient" 
	android:gravity="right">
	<RelativeLayout 
		android:layout_height="match_parent" 
		android:layout_width="match_parent" 
		android:orientation="vertical"
		android:layout_margin="0dip"
		android:id="@+id/objMainLayout" 	
		android:background="@drawable/glm_main_popup" 
		android:clickable="true" android:gravity="right">
	
	    <RelativeLayout
	        android:id="@+id/TopLinear"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/glm_popup" >
	
	        <TextView
	            android:id="@+id/text_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:text="@string/app_name_buy"
	            android:textColor="#FFFFFFFF"
	            android:textSize="14sp"
	            android:textStyle="bold" />
	
	    </RelativeLayout>
		<ScrollView 
	        	android:id="@+id/scrollView1" 
	        	android:layout_width="match_parent" 
	        	android:layout_height="match_parent"
	        	android:layout_marginTop="50dp">
				<LinearLayout 
					android:id="@+id/internal" 
					android:orientation="vertical" 
					android:layout_height="match_parent" 
					android:layout_width="match_parent" 
					
					android:padding="5dip">
					
				    <LinearLayout 
							android:layout_height="wrap_content" 
							android:layout_width="match_parent" 							
							android:padding="10dip"
							android:layout_marginTop="10dip" 
							android:orientation="vertical">
							<RelativeLayout 
								android:layout_height="match_parent" 
								android:layout_width="match_parent" 
								android:background="@drawable/lista_gradient"
								android:padding="10dip"
								android:layout_marginTop="0dip" 
								android:orientation="horizontal" 
								android:clickable="true"
							    android:id="@+id/btn_bmi">
							
								<TextView
						            android:id="@+id/txtBMI"
						            android:layout_width="wrap_content"
						            android:layout_height="wrap_content"	           
						            android:text="@string/bmi"
						            android:textColor="#FFFFFF"
						            android:textSize="20sp" />
									
								<TextView
								    android:id="@+id/txtBMIGO"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_alignParentRight="true"
								    android:text=">>"
								    android:textColor="#FFFFFF"
								    android:textSize="20sp"
								    android:visibility="visible" />
	
								<TextView
								    android:id="@+id/txtBMIValue"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_alignBaseline="@+id/txtBMI"
								    android:layout_alignBottom="@+id/txtBMI"
								    android:layout_marginLeft="20dp"
								    android:layout_toRightOf="@+id/txtBMI"
								    android:text=" - "
								    android:textColor="#FFFFFF"
								    android:textSize="18sp" />
	
							</RelativeLayout>			      
					</LinearLayout>
				    
					<!-- Run Workout -->

				    <RelativeLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="10dip"
				        android:orientation="horizontal"
				        android:padding="10dip" >

				        <Button
				            android:id="@+id/btnManualRun"
				            android:layout_width="wrap_content"
				            android:layout_height="fill_parent"
				            android:layout_alignParentRight="true"
				            android:layout_alignTop="@+id/btn_start_running"
				            android:background="@drawable/lista_gradient"
				            android:clickable="true"
				            android:text="@string/manual"
				            android:textColor="#FFFFFF"
				            android:textSize="16sp" />

				        <LinearLayout
				            android:id="@+id/btn_start_running"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentLeft="true"
				            android:layout_centerVertical="true"
				            android:background="@drawable/lista_gradient"
				            android:clickable="true"
				            android:orientation="horizontal"
				            android:padding="10dip" >

				            <ImageView
				                android:id="@+id/imgTypeExercise"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_marginTop="0dip"
				                android:src="@drawable/running" />

				            <LinearLayout
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:layout_marginTop="0dip"
				                android:orientation="vertical"
				                android:padding="0dip" >

				            </LinearLayout>
				        </LinearLayout>

				        <TextView
				            android:id="@+id/textNote"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_alignLeft="@+id/btn_start_running"
				            android:layout_alignParentBottom="true"
				            android:layout_marginLeft="46dp"
				            android:gravity="bottom|right"
				            android:text="@string/startexercise_dett1"
				            android:textColor="#FFFFFF"
				            android:textSize="10sp" />

				    </RelativeLayout>

					<!-- Run Workout -->
					
					<!-- Walk Workout -->
					<RelativeLayout 
							android:layout_height="wrap_content" 
							android:layout_width="match_parent" 							
							android:padding="10dip"
							android:layout_marginTop="10dip" 
							android:orientation="vertical" >
							<LinearLayout 
								android:layout_height="wrap_content" 
								android:layout_width="wrap_content" 
								android:background="@drawable/lista_gradient"
								android:padding="10dip"
								android:layout_marginTop="0dip" 
								android:orientation="horizontal"
								android:clickable="true"
							    android:id="@+id/btn_start_walking">
								<ImageView 
									android:layout_height="wrap_content" 
									android:layout_width="wrap_content" 								
									android:id="@+id/imgTypeExercise" 
									android:src="@drawable/walking" 
									android:layout_marginTop="0dip"></ImageView>
								<LinearLayout 
									android:layout_height="match_parent" 
									android:layout_width="match_parent" 
									android:padding="0dip"
									android:layout_marginTop="0dip" 
									android:orientation="vertical">
									</LinearLayout>
							</LinearLayout>

							<Button
							    android:id="@+id/btnManualWalk"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_alignParentRight="true"
							    android:layout_alignTop="@+id/btn_start_walking"
							    android:background="@drawable/lista_gradient"
							    android:clickable="true"
							    android:text="@string/manual"
							    android:textColor="#FFFFFF"
							    android:textSize="16sp" />

							<TextView
							    android:id="@+id/textNote"
							    android:layout_width="match_parent"
							    android:layout_height="wrap_content"
							    android:layout_alignLeft="@+id/btnManualWalk"
							    android:layout_alignParentBottom="true"
							    android:gravity="bottom|right"
							    android:text="@string/startexercise_dett1"
							    android:textColor="#FFFFFF"
							    android:textSize="10sp" />

					</RelativeLayout>
					<!-- Walk Workout -->
					
					<!-- Bike Workout -->
					<RelativeLayout 
							android:layout_height="wrap_content" 
							android:layout_width="match_parent" 							
							android:padding="10dip"
							android:layout_marginTop="10dip" 
							android:orientation="vertical">
							<LinearLayout 
								android:layout_height="wrap_content" 
								android:layout_width="wrap_content" 
								android:background="@drawable/lista_gradient"
								android:padding="10dip"
								android:layout_marginTop="0dip" 
								android:orientation="horizontal"
								android:clickable="true"
							    android:id="@+id/btn_start_biking">
								<ImageView 
									android:layout_height="wrap_content" 
									android:layout_width="wrap_content" 								
									android:id="@+id/imgTypeExercise" 
									android:src="@drawable/biking" 
									android:layout_marginTop="0dip"></ImageView>
								<LinearLayout 
									android:layout_height="match_parent" 
									android:layout_width="match_parent" 
									android:padding="0dip"
									android:layout_marginTop="0dip" 
									android:orientation="vertical">
									</LinearLayout>
							</LinearLayout>

							<Button
							    android:id="@+id/btnManualBike"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_alignParentRight="true"
							    android:layout_alignTop="@+id/btn_start_biking"
							    android:background="@drawable/lista_gradient"
							    android:clickable="true"
							    android:text="@string/manual"
							    android:textColor="#FFFFFF"
							    android:textSize="16sp" />

							<TextView
							    android:id="@+id/textNote"
							    android:layout_width="match_parent"
							    android:layout_height="wrap_content"
							    android:layout_alignBottom="@+id/btn_start_biking"
							    android:layout_alignParentRight="true"
							    android:gravity="bottom|right"
							    android:text="@string/startexercise_dett1"
							    android:textColor="#FFFFFF"
							    android:textSize="10sp" />

					</RelativeLayout>
					<!-- Bike Workout -->
					
					<!-- Function Trainer -->																						
					<LinearLayout 
						android:orientation="vertical" 
						android:layout_marginTop="25dip" 
						android:layout_width="match_parent" 
						android:id="@+id/LinearLayout01" 
						android:layout_height="wrap_content"
						android:padding="20dip">
						<Button android:layout_height="wrap_content"
							android:layout_width="match_parent" 
							android:text="@string/tabHistory_label" 
							android:textSize="25sp" 
							android:background="@drawable/lista_gradient"
							android:textColor="#FFFFFF" 
							android:id="@+id/btn_history" android:clickable="true"></Button>
						
						<Button android:layout_height="wrap_content" 
							android:layout_marginTop="20dip" android:layout_width="match_parent" 
							android:text="@string/weight" 
							android:textSize="25sp" 
							android:background="@drawable/lista_gradient"
							android:textColor="#FFFFFF" 
							android:id="@+id/btn_weight" android:clickable="true"></Button>

						<Button
						    android:id="@+id/btn_trainer_store"
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_marginTop="20dip"
						    android:background="@drawable/lista_gradient"
						    android:clickable="true"
						    android:text="@string/tabStore_label"
						    android:textColor="#FFFFFF"
						    android:textSize="25sp" />

						<Button
						    android:id="@+id/btn_settings"
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_marginTop="20dip"
						    android:background="@drawable/lista_gradient"
						    android:clickable="true"
						    android:text="@string/tabPref_label"
						    android:textColor="#FFFFFF"
						    android:textSize="25sp" />
						
						<Button android:layout_height="wrap_content" 
						    android:layout_marginTop="20dip" 
							android:layout_width="match_parent" 
							android:text="@string/tabAbout_label" 
							android:textSize="25sp" 
							android:background="@drawable/lista_gradient"
							android:textColor="#FFFFFF" 
							android:id="@+id/btn_info" android:clickable="true"></Button>
						    																	
					</LinearLayout>
					<!-- Function Trainer -->	
					
					<View 
						android:layout_weight="1" 
						android:layout_marginRight="0dip" 
						android:layout_width="fill_parent" 
						
						android:id="@+id/view3" 
						android:layout_marginBottom="0dip" 
						android:layout_height="1dip" 
						android:layout_marginTop="2dip" 
						android:layout_marginLeft="0dip"
						android:background="@drawable/lista_gradient">
					</View>				
				</LinearLayout>		
			</ScrollView>

		<ImageView
		    android:id="@+id/imageView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/TopLinear"
		    android:layout_marginLeft="24dp"
            android:layout_marginTop="-4dp"
		    android:src="@drawable/glm_arrow_down" />

	</RelativeLayout>
</LinearLayout>	