<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 	
	android:layout_height="match_parent" 
	android:layout_width="match_parent" 
	android:orientation="vertical"
	android:layout_margin="0dip"
	android:id="@+id/objMainLayout" 	
	android:background="@drawable/main_gradient"
	android:clickable="true" android:gravity="right">	
	<RelativeLayout android:padding="6dip" android:background="@drawable/lista_title" android:layout_width="fill_parent" android:id="@+id/relativeLayout1" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content"></LinearLayout>
			<TextView 
                	android:layout_marginLeft="10dip"
                	android:layout_width="wrap_content" 
                	android:textStyle="bold" 
                	android:textSize="14sp" 
                	android:layout_height="wrap_content" 
                	android:textColor="#FFFFFFFF" 
                	android:id="@+id/textHistory" 
                	android:text="@string/exercise_dett"
                	></TextView>  
    </RelativeLayout>
	<ScrollView android:layout_marginTop="10dip"
        	android:id="@+id/scrollView1" 
        	android:layout_width="match_parent" 
        	android:layout_height="match_parent">
			<LinearLayout 
				android:id="@+id/internal" 
				android:orientation="vertical" 
				android:layout_height="wrap_content" 
				android:layout_width="match_parent" 
				android:layout_weight="1">
				
				
				<!-- Dettaglio Graph Inizio -->
				<LinearLayout android:id="@+id/linearLayout2" 
							android:orientation="vertical" 
							android:layout_height="wrap_content" 
							android:background="@drawable/lista_gradient" 
							android:layout_width="match_parent">					
							<!-- 1 Row -->
							<RelativeLayout 
								android:id="@+id/internal" 
								android:orientation="vertical" 
								android:layout_height="match_parent" 
								android:layout_width="match_parent" 
								android:layout_weight="1">
										
								<RelativeLayout 
									android:layout_height="wrap_content" 
									android:layout_width="wrap_content" 
									android:id="@+id/relativeLayout2">
								</RelativeLayout>

								<TextView
								    android:id="@+id/textTitle"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_alignParentLeft="true"
								    android:layout_alignParentTop="true"
								    android:text="@string/distance"
								    android:textColor="#FFFFFF" />

								<TextView
								    android:id="@+id/textDistance_tot"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_alignParentRight="true"
								    android:layout_alignParentTop="true"
								    android:gravity="right"
								    android:text="30,9Km"
								    android:textAppearance="?android:attr/textAppearanceLarge"
								    android:textSize="18dip"
								    android:textStyle="bold" />

								<View
								    android:id="@+id/view3"
								    android:layout_width="fill_parent"
								    android:layout_height="1dip"
								    android:layout_alignParentBottom="true"
								    android:layout_centerHorizontal="true"
								    android:layout_weight="1"
								    android:background="#ADAC99" />
				
							</RelativeLayout>
							<!-- 1 Row -->
							
							<!-- 2 Row -->
							<LinearLayout 
								android:id="@+id/internal" 
								android:orientation="vertical" 
								android:layout_height="match_parent" 
								android:layout_width="match_parent" 
								android:layout_weight="1" android:visibility="invisible">
							    
								<TextView 
									android:layout_marginLeft="80dip"
									android:layout_height="wrap_content" 
									android:text="@string/time" 
									android:id="@+id/textTitle" 
									android:layout_width="wrap_content"
									android:textColor="#FFFFFF">
								</TextView>
								
								<LinearLayout android:gravity="right" android:layout_marginTop="1dip" android:layout_width="wrap_content" android:id="@+id/linearLayout1" android:orientation="horizontal" android:layout_height="wrap_content">
									<TableLayout android:id="@+id/tableLayout1" android:layout_height="match_parent" android:layout_width="wrap_content">
										<TableRow android:layout_height="wrap_content" android:baselineAligned="true" android:layout_width="wrap_content" android:id="@+id/tableRow1">
											<TextView android:text="50Min" 
											android:layout_width="wrap_content" 
											android:textAppearance="?android:attr/textAppearanceLarge"
											android:textStyle="bold"
											android:textSize="18dip"
											android:layout_height="wrap_content" 
											android:gravity="right"
											android:layout_marginLeft="200dip" android:id="@+id/textTime"></TextView>
										</TableRow>
									</TableLayout>
								</LinearLayout>
								<RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/relativeLayout2">
								</RelativeLayout>
								<View 
									android:layout_weight="1" 
									android:layout_marginRight="20dip" 
									android:layout_width="fill_parent" 
									
									android:id="@+id/view3" 
									android:layout_marginBottom="0dip" 
									android:layout_height="5dip" 
									android:layout_marginTop="2dip" 
									android:layout_marginLeft="20dip">
								</View>				
							</LinearLayout>
							<!-- 2 Row -->

							<LinearLayout
							    android:id="@+id/llGraph"
							    android:layout_width="match_parent"
							    android:layout_height="140dip"
							    android:background="@drawable/web_container"
							    android:orientation="vertical" >

							    <ProgressBar
							        android:id="@+id/pBarWaiting"
							        style="?android:attr/progressBarStyleLarge"
							        android:layout_width="match_parent"
							        android:indeterminate="true"
							        android:layout_height="140dip"
							        android:layout_weight="0.83" />
							</LinearLayout>

				</LinearLayout>	
				<!-- Dettaglio Graph Inizio -->	    
				
				<!-- Separator -->	   
				<View 
					android:layout_weight="1" 
					android:layout_marginRight="20dip" 
					android:layout_width="fill_parent" 
					android:background="@drawable/main_gradient"
					android:id="@+id/view3" 
					android:layout_marginBottom="0dip" 
					android:layout_height="1dip" 
					android:layout_marginTop="2dip" 
					android:layout_marginLeft="20dip">
				</View>		
				<!-- Separator -->
				
				<!-- RUN -->			
				<LinearLayout android:id="@+id/linearLayout2" 
					android:orientation="vertical" 
					android:layout_height="wrap_content" 
					android:background="@drawable/lista_gradient" 
					android:layout_width="match_parent" >
						<RelativeLayout
					        android:orientation="horizontal"
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        
					        android:padding="10dip"
					        android:clickable="true"
					        android:id="@+id/btn_expand">					        					        				        
							<!-- 1 Row -->
							<LinearLayout 
								android:layout_marginTop="30dip" 
								android:id="@+id/internal" 
								android:orientation="vertical" 
								android:layout_height="match_parent" 
								android:layout_width="match_parent" 
								android:layout_weight="1">
							    
											
								<LinearLayout 
									android:gravity="right" 
									android:layout_marginTop="10dip" 
									android:layout_width="match_parent" 
									android:id="@+id/linearLayout1" 
									android:orientation="horizontal" 
									android:layout_height="wrap_content">									
									<TextView android:text="0" 
											android:layout_width="match_parent" 
											android:textAppearance="?android:attr/textAppearanceSmall"
											android:textStyle="bold"
											android:textSize="12dip"
											android:layout_height="wrap_content" 
											android:gravity="right"
											android:layout_marginLeft="200dip" android:id="@+id/textDistance_run"></TextView>										
								</LinearLayout>
								<RelativeLayout 
									android:layout_height="wrap_content" 
									android:layout_width="wrap_content" 
									android:id="@+id/relativeLayout2">
								</RelativeLayout>
								<View 
									android:layout_weight="1" 
									android:layout_marginRight="20dip" 
									android:layout_width="fill_parent" 
									android:background="#ADAC99" 
									android:id="@+id/view3" 
									android:layout_marginBottom="0dip" 
									android:layout_height="1dip" 
									android:layout_marginTop="2dip" 
									android:layout_marginLeft="20dip">
								</View>				
							</LinearLayout>
							<!-- 1 Row -->       					            					            					            					
           							<Button 
					                	android:clickable="true" 
					                	android:layout_width="match_parent" 
					                	android:textSize="16sp" 
					                	android:textColor="#FFFFFF"
					                	android:layout_height="wrap_content" 
					                	android:background="@drawable/lista_gradient" 
					                	android:id="@+id/btn_history_run"                	
					                	android:text="@string/history_run"></Button>								
									 	 
						</RelativeLayout>		            					
				</LinearLayout>		
	            <!-- RUN -->	            
	            
	            <!-- Separator -->	   
				<View 
					android:layout_weight="1" 
					android:layout_marginRight="20dip" 
					android:layout_width="fill_parent" 
					android:background="@drawable/main_gradient"
					android:id="@+id/view3" 
					android:layout_marginBottom="0dip" 
					android:layout_height="1dip" 
					android:layout_marginTop="2dip" 
					android:layout_marginLeft="20dip">
				</View>		
				<!-- Separator -->
				
				<!-- WALK -->			
				<LinearLayout android:id="@+id/linearLayout2" 
					android:orientation="vertical" 
					android:layout_height="wrap_content" 
					android:background="@drawable/lista_gradient" 
					android:layout_width="match_parent" >
						<RelativeLayout
					        android:orientation="horizontal"
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        
					        android:padding="10dip"
					        android:clickable="true"
					        android:id="@+id/btn_expand">
							<!-- 1 Row -->
							<LinearLayout 
								android:layout_marginTop="30dip" 
								android:id="@+id/internal" 
								android:orientation="vertical" 
								android:layout_height="match_parent" 
								android:layout_width="match_parent" 
								android:layout_weight="1">
							    
										
								<LinearLayout 
									android:gravity="right" 
									android:layout_marginTop="10dip" 
									android:layout_width="match_parent" 
									android:id="@+id/linearLayout1" 
									android:orientation="horizontal" 
									android:layout_height="wrap_content">									
									<TextView android:text="0" 
											android:layout_width="match_parent" 
											android:textAppearance="?android:attr/textAppearanceSmall"
											android:textStyle="bold"
											android:textSize="12dip"
											android:layout_height="wrap_content" 
											android:gravity="right"
											android:layout_marginLeft="200dip" android:id="@+id/textDistance_walk"></TextView>										
								</LinearLayout>
								<RelativeLayout 
									android:layout_height="wrap_content" 
									android:layout_width="wrap_content" 
									android:id="@+id/relativeLayout2">
								</RelativeLayout>
								<View 
									android:layout_weight="1" 
									android:layout_marginRight="20dip" 
									android:layout_width="fill_parent" 
									android:background="#ADAC99" 
									android:id="@+id/view3" 
									android:layout_marginBottom="0dip" 
									android:layout_height="1dip" 
									android:layout_marginTop="2dip" 
									android:layout_marginLeft="20dip">
								</View>				
							</LinearLayout>
							<!-- 1 Row -->  
           							<Button 
					                	android:clickable="true" 
					                	android:layout_width="match_parent" 
					                	android:textSize="16sp" 
					                	android:textColor="#FFFFFF" 
					                	android:layout_height="wrap_content" 
					                	android:background="@drawable/lista_gradient" 
					                	android:id="@+id/btn_history_walk"                	
					                	android:text="@string/history_walk"></Button>								
									 	 
						</RelativeLayout>		            					
				</LinearLayout>		
	            <!-- WALK -->
	            
	            <!-- Separator -->	   
				<View 
					android:layout_weight="1" 
					android:layout_marginRight="20dip" 
					android:layout_width="fill_parent" 
					android:background="@drawable/main_gradient"
					android:id="@+id/view3" 
					android:layout_marginBottom="0dip" 
					android:layout_height="1dip" 
					android:layout_marginTop="2dip" 
					android:layout_marginLeft="20dip">
				</View>		
				<!-- Separator -->
				
				<!-- BIKE -->			
				<LinearLayout android:id="@+id/linearLayout2" 
					android:orientation="vertical" 
					android:layout_height="wrap_content" 
					android:background="@drawable/lista_gradient" 
					android:layout_width="match_parent" >
						<RelativeLayout
					        android:orientation="horizontal"
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        
					        android:padding="10dip"
					        android:clickable="true"
					        android:id="@+id/btn_expand">
							<!-- 1 Row -->
							<LinearLayout 
								android:layout_marginTop="30dip" 
								android:id="@+id/internal" 
								android:orientation="vertical" 
								android:layout_height="match_parent" 
								android:layout_width="match_parent" 
								android:layout_weight="1">
							    									
								<LinearLayout 
									android:gravity="right" 
									android:layout_marginTop="10dip" 
									android:layout_width="match_parent" 
									android:id="@+id/linearLayout1" 
									android:orientation="horizontal" 
									android:layout_height="wrap_content">									
									<TextView android:text="0" 
											android:layout_width="match_parent" 
											android:textAppearance="?android:attr/textAppearanceSmall"
											android:textStyle="bold"
											android:textSize="12dip"
											android:layout_height="wrap_content" 
											android:gravity="right"
											android:layout_marginLeft="200dip" android:id="@+id/textDistance_bike"></TextView>										
								</LinearLayout>									
								<RelativeLayout 
									android:layout_height="wrap_content" 
									android:layout_width="wrap_content" 
									android:id="@+id/relativeLayout2">
								</RelativeLayout>
								<View 
									android:layout_weight="1" 
									android:layout_marginRight="20dip" 
									android:layout_width="fill_parent" 
									android:background="#ADAC99" 
									android:id="@+id/view3" 
									android:layout_marginBottom="0dip" 
									android:layout_height="1dip" 
									android:layout_marginTop="2dip" 
									android:layout_marginLeft="20dip">
								</View>				
							</LinearLayout>
							<!-- 1 Row -->  
           							<Button 
					                	android:clickable="true" 
					                	android:layout_width="match_parent" 
					                	android:textSize="16sp" 
					                	android:textColor="#FFFFFF"
					                	android:layout_height="wrap_content" 
					                	android:background="@drawable/lista_gradient" 
					                	android:id="@+id/btn_history_bike"                	
					                	android:text="@string/history_bike"></Button>																 	 
						</RelativeLayout>		            					
				</LinearLayout>		
	            <!-- BIKE -->
	            			  	
	        </LinearLayout>
	  </ScrollView>
</LinearLayout> 