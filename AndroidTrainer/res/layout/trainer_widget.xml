<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="110dp"
    android:background="@drawable/gradient_linear1" >

   <TextView
        android:id="@+id/lblTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="80dp"
        android:text="@string/step"
        android:textColor="#FFFFFF"/>
    
    <TextView
        android:id="@+id/txtSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="180dp"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dip"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/lblDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lblTime"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="@string/distance"
        android:textColor="#FFFFFF" />    

    <TextView
        android:id="@+id/txtDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSteps"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="180dp"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dip"
        android:textStyle="bold"/>
    
    
    <TextView
        android:id="@+id/lblKalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_below="@+id/lblDistance"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="@string/kalories"
        android:textColor="#FFFFFF" />

     <TextView
        android:id="@+id/txtKalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_below="@+id/txtDistance"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dip"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgTrainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_pro" 
        android:clickable="true"/>

</RelativeLayout> 