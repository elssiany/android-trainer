<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/main_gradient"
	android:id="@+id/bg_about"
	android:gravity="top"
	android:padding="0dp">	

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/glm_main_popup"
	    android:gravity="top" android:padding="0dp"
	    android:orientation="vertical" >

	    <RelativeLayout 
	        android:id="@+id/TopLinear"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/glm_popup" >

	        <ImageButton
	            android:id="@+id/btn_back"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/circle_gradient"
	            android:padding="2dip"
	            android:src="@drawable/left" />

	        <TextView
	            android:id="@+id/text_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:text="@string/about"
	            android:textColor="#FFFFFFFF"
	            android:textSize="14sp"
	            android:textStyle="bold" />
	    </RelativeLayout>

	    <TextView
	        android:id="@+id/text_about6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/about_3"
	        android:textColor="#FFFFFF"
	        android:textSize="14dip"
	        android:textStyle="normal" />

	    <Button
	        android:id="@+id/btn_mail_segnalazione"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="43dp"
	        android:background="@drawable/lista_gradient"
	        android:singleLine="true"
	        android:text="@string/email"
	        android:textColor="#FFFFFF"
	        android:textSize="12dip"
	        android:textStyle="bold"
	        android:tint="#EE333333" />

	    <TextView
	        android:id="@+id/text_about11"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/btn_mail_segnalazione"
	        android:layout_centerHorizontal="true"
	        android:paddingBottom="5dip"
	        android:text="@string/send"
	        android:textColor="#FFFFFF"
	        android:textSize="14dip"
	        android:textStyle="normal" />

	    <TextView
	        android:id="@+id/txtVersion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/text_about11"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="14dp"
	        android:text="@string/version_n"
	        android:textColor="#FFFFFF"
	        android:textSize="15dip"
	        android:textStyle="normal" />

	    <TextView
	        android:id="@+id/text_about2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/txtVersion"
	        android:layout_centerHorizontal="true"
	        android:paddingTop="5dip"
	        android:text="@string/version"
	        android:textColor="#FFFFFF"
	        android:textSize="15dip"
	        android:textStyle="normal" />

	    <TextView android:padding="5dp"
	        android:id="@+id/text_about7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/TopLinear"
	        android:layout_marginTop="129dp"
	        android:text="@string/about_4"
	        android:textColor="#FFFFFF"
	        android:textSize="14dip"
	        android:textStyle="normal" />

	    <TextView android:padding="5dp"
	        android:id="@+id/text_about8"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/text_about7"
	        android:paddingBottom="9dip"
	        android:text="@string/about_5"
	        android:textColor="#FFFFFF"
	        android:textSize="14dip"
	        android:textStyle="normal" />

	    <TextView android:padding="5dp"
	        android:id="@+id/text_about4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/text_about7"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="47dp"
	        android:text="@string/about_1"
	        android:textColor="#FFFFFF"
	        android:textSize="14dip"
	        android:textStyle="normal" />

	    <TextView android:padding="5dp"
	        android:id="@+id/text_about10"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/text_about4"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="19dp"
	        android:text="@string/about_7"
	        android:textColor="#FFFFFF"
	        android:textSize="14dip"
	        android:textStyle="normal" />

	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/TopLinear"
	         android:layout_marginLeft="24dp"
                android:layout_marginTop="-4dp"
	        android:src="@drawable/glm_arrow_down" />

	    <TextView
	        android:id="@+id/text_about3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="24dp"
	        android:text="@string/author"
	        android:textColor="#FFFFFF"
	        android:textSize="15dip"
	        android:textStyle="bold" />

	</RelativeLayout>

</RelativeLayout>